#!/bin/sh -ex

response_code=$(curl -sv -o out.txt -w "%{response_code}" -H"Authorization: Token ${GITHUB_TOKEN?}" https://api.github.com/repos/rrizun/xbuild-java/releases -d @-) << EOF
{
  "tag_name": "${XBUILD}",
  "target_commitish": "${XBUILD_COMMIT}"
}
EOF

cat out.txt

if [ $response_code -lt 400 ]; then
  echo success
fi
